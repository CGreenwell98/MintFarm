<%- include("partials/header"); -%>

<div class="item-page centre">

  <div class="wrapper">
    <div class="product-img">
      <img src="<%= item.source %>" height="450" width="450">
    </div>
    <div class="product-info">
      <div class="product-text">
        <h2 class="product-page-header"><%= item.name %></h2>
        <p><%= item.desc %></p>
      </div>
      <div class="product-price-btn">
        <p>Standard price: £<span><%= item.price %></span></p>
        <p>Bulk price: £<span><%= item.bulkPrice %> <small class="text-muted"> (for 100+ items)</small></p>
        <form action="/products/<%= item.name %>" method="post">
          <button type="submit" class="btn btn-dark">buy now</button>
        </form>
      </div>
    </div>
  </div>

</div>

<%- include("partials/noFooter"); -%>
