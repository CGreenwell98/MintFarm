<%- include("partials/header"); -%>

<div class="centre login-page">
  <div class="login-box centre">
    <div class="login-items">
      <h3 class="login-title">Register:</h3>
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <input class="form-control" id="address" name="address" required>
        </div>
      <div class="form-group">
        <label for="email-address">Email-address</label>
        <input type="email" class="form-control" id="email-address" name="username" aria-describedby="emailHelp" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
      <div class="login-buttons">
        <a class="button-anchor"><button type="submit" class="btn btn-primary login-button">Register</button></a>
        <a href="/log-in" class="button-anchor"><button type="button" class="btn btn-primary login-button">Back</button></a>
      </div>
    </form>
    </div>
  </div>
</div>

<%- include("partials/noFooter.ejs"); -%>
