<%- include("partials/header"); -%>

<div class="row product-page">
  <div class="col-md-3 product-bar">
    <h2 class="product-bar-title">Our Products:</h2>
    <p>MintFarm offers a wide range of mint themed products. We serve both indivduals and large businesses with different prices dependant on order sizes. Sign in to start shopping with us today!</p>
    <div class="login-buttons">
      <a href="/log-in" class="button-anchor"><button type="button" class="btn btn-dark login-button">Sign In</button></a>
      <a href="/account#basket" class="button-anchor"><button type="button" class="btn btn-dark login-button"><i class="fas fa-shopping-basket"></i> Basket</button></a>
    </div>
    <form action="/products" method="post">
      <input type="checkbox" name="checkbox" value="descending" onchange="this.form.submit()"
    </form>
  </div>

  <div class="col-md-9 product-section">
    <div class="row">

      <% foundItems.forEach(item => { %>
      <div class="col-md-4">
        <div class="card product-card">
          <a class="card-anchor" href="/products/<%= item.name %>">
            <img class="card-img-top" src="<%= item.source %>" alt="<%= item.name %>.img">
            <div class="card-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text price"><small class="text-muted">Â£ <%= item.price %></small></p>
            </div>
          </a>
        </div>
      </div>
      <% }) %>

    </div>
  </div>
</div>

<%- include("partials/footer"); -%>
