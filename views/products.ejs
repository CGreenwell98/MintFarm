<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header"); -%>
  <body>
    <%- include("partials/nav"); -%>

    <div class="row product-page">
      <div class="col-md-3 product-bar">
        <h2 class="product-bar-title">Our Products:</h2>
        <p>
          MintFarm offers a wide range of mint themed products. We serve both
          individuals and large businesses with different prices dependant on
          order sizes. Sign in to start shopping with us today!
        </p>
        <div class="login-buttons">
          <a href="/log-in" class="button-anchor"
            ><button type="button" class="btn btn-dark login-button">
              <%= account %>
            </button></a
          >
          <a href="/account#basket" class="button-anchor"
            ><button type="button" class="btn btn-dark login-button">
              <i class="fas fa-shopping-basket"></i> Basket
            </button></a
          >
        </div>
        <hr />
        <div class="sort-items-box">
          <h2 class="product-bar-subTitle">Sort Items:</h2>
          <form action="/products" method="post">
            <p>
              <input
                type="checkbox"
                name="checkbox"
                value="priceAscending"
                onchange="this.form.submit()"
              />
              Price Ascending
            </p>
            <p>
              <input
                type="checkbox"
                name="checkbox"
                value="priceDescending"
                onchange="this.form.submit()"
              />
              Price Descending
            </p>
            <p>
              <input
                type="checkbox"
                name="checkbox"
                value="nameAscending"
                onchange="this.form.submit()"
              />
              Name Ascending
            </p>
            <p>
              <input
                type="checkbox"
                name="checkbox"
                value="nameDescending"
                onchange="this.form.submit()"
              />
              Name Descending
            </p>
          </form>
        </div>
      </div>

      <div class="col-md-9 product-section spinner">
        <div class="row product-display-area hidden">
          <% foundItems.forEach(item => { %>
          <div class="col-md-4">
            <div class="card product-card">
              <a class="card-anchor" href="/products/<%= item.name %>">
                <img
                  class="card-img-top"
                  src="<%= item.source %>"
                  alt="<%= item.name %>.img"
                />
                <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text price">
                    <small class="text-muted">Â£ <%= item.price %></small>
                  </p>
                </div>
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script src="/javascript/products.js" charset="utf-8" defer></script>
  </body>
  <%- include("partials/footer"); -%>
</html>
