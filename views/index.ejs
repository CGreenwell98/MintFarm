<!-- Map -->

<script>
function initMap() {
  const options = {
    zoom:10,
    center:{lat:51.5074, lng:-0.1278}
  }
  const map = new google.maps.Map(document.getElementById("map"), options);
  const marker = new google.maps.Marker({
    position:{lat:51.5074,lng:-0.1278},
    map:map
  });
}
</script>

<script defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyASIsZKIh8tbr5-_uGDmvHw-jAbPHRY_d8&callback=initMap">
